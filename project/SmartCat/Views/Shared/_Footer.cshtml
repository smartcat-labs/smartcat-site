        <img src="/img/star-texture.png" alt="" />

        @if (!string.IsNullOrEmpty(Model.IntroductionText))
        { 
            <div class="wrapper">
               @Html.Raw(Model.IntroductionText)
            </div>
        }
    </section>

    <div class="contact-block">
        <div class="wrapper">
