<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <link href="favicon.ico" rel="icon" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="@ViewBag.SeoDescription">
    <meta name="keywords" content="@ViewBag.SeoKeywords" />
    <meta name="author" content="@ViewBag.SeoAuthor" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/rs-plugin/css/settings.css" media="screen" />

    <script type="text/javascript" src="/scripts/libs/modernizr-2.6.2.min.js"></script>

    @RenderSection("additionalHeaderSection",false)

