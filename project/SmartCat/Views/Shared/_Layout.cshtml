<body>

    <div class="container">
     
        @{Html.RenderAction("GetHeader", "LayoutSufrace");}

        <div class="page-title">
            <div class="wrapper">
                <h1>@ViewBag.HeadSectionTitle</h1>
            </div>
        </div>

        <div class="content">
           @RenderBody()
        </div>

        @{Html.RenderAction("GetFooter", "LayoutSufrace");}

    </div>

    <!-- javascript -->

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">window.jQuery || document.write("<script src='assets/scripts/main/jquery-1.8.3.min.js'>\x3C/script>")</script>
    <script type="text/javascript" src="/scripts/libs/classie.js"></script>
    <script type="text/javascript" src="/scripts/libs/stepsForm.js"></script>
    <script type="text/javascript" src="/scripts/libs/jquery.flexslider-min.js"></script>
    <script type="text/javascript" src="/scripts/libs/grayscale.js"></script>

    <script type="text/javascript" src="/scripts/main/default.js"></script>
    <script type="text/javascript" src="/scripts/libs/functions.js"></script>
