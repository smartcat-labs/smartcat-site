@using Vega.USiteBuilder;

@model SmartCat.Entities.DocumentTypes.Page

@if (Model.BlogsWidget || Model.NewsWidget || Model.ExpertiseWidget || Model.TeamWidget)
{
    <aside class="sidebar">
        @{
            if (Model.BlogsWidget)
            {
                Html.RenderPartial("~/Views/Partials/_BlogsWidget.cshtml", Model);
            }

            if (Model.NewsWidget)
            {
                Html.RenderPartial("~/Views/Partials/_NewsWidget.cshtml", Model);
            }

            if (Model.ExpertiseWidget)
            {
                Html.RenderPartial("~/Views/Partials/_ExpertiseWidget.cshtml", Model);
            }

            if (Model.TeamWidget)
            {
                Html.RenderPartial("~/Views/Partials/_TeamWidget.cshtml", Model);
            }
        }
    </aside>
}